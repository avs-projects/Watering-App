<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/plant_firstName"
        style="@style/Widget.Inventory.ListItemTextView"
        android:layout_width="60dp"
        android:fontFamily="sans-serif"
        android:layout_marginStart="90dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Nom 1" />

    <TextView
        android:id="@+id/plant_secondName"
        style="@style/Widget.Inventory.ListItemTextView"
        android:layout_width="60dp"
        android:layout_marginTop="60dp"
        android:layout_marginStart="90dp"
        android:fontFamily="sans-serif"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Nom 2" />

    <TextView
        android:id="@+id/plant_dateLastWatering"
        style="@style/Widget.Inventory.ListItemTextView"
        android:layout_width="100dp"
        android:layout_below="@+id/plant_firstName"
        android:fontFamily="sans-serif-medium"
        android:layout_marginEnd="0dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/plant_dateNextWatering"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/plant_firstName"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Date Last Watering" />

    <TextView
        android:id="@+id/plant_dateLastNutrients"
        style="@style/Widget.Inventory.ListItemTextView"
        android:layout_width="100dp"
        android:layout_below="@+id/plant_firstName"
        android:layout_marginTop="60dp"
        android:fontFamily="sans-serif-medium"
        android:layout_marginEnd="0dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/plant_dateNextWatering"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/plant_firstName"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Date Last Nutrients" />

    <TextView
        android:id="@+id/plant_dateNextWatering"
        style="@style/Widget.Inventory.ListItemTextView"
        android:layout_width="100dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"
        android:fontFamily="sans-serif-medium"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Date Next Watering" />

    <TextView
        android:id="@+id/plant_dateNextNutrients"
        style="@style/Widget.Inventory.ListItemTextView"
        android:layout_width="100dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="0dp"
        android:fontFamily="sans-serif-medium"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Date Next Nutrients " />

    <View
        android:id="@+id/divider"
        style="@style/Divider"
        android:layout_marginTop="@dimen/margin_between_elements"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plant_dateNextNutrients" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>